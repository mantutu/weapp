@import "../../app.wxss";

view,
text {
    box-sizing: border-box;
}

.hidden {
    display: none;
}

.transition {
    animation: ease both;
}

.actionsheet_window {
    position: fixed;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    width: 100%;
    height: 100%;
    z-index: 100;
    animation-duration: 0.5s;
    animation-fill-mode: forwards;
}

.actionsheet_mask {
    position: absolute;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5);
}

.actionsheet_list {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    width: 100%;
    background-color: #e5e5e5;
    animation-duration: 0.5s;
    animation-fill-mode: forwards;
}

.actionsheet_item {
    width: 100%;
    min-height: 100rpx;
    font-size: 36rpx;
    font-weight: 400;
    color: rgba(21, 30, 38, 1);
    text-align: center;
    background-color: #fefefe;
}

.actionsheet_item .text_item {
    font-size: 28rpx;
    font-weight: 400;
    color: rgba(138, 142, 146, 1);
    margin: 30rpx 40rpx;
    line-height: 40rpx;
    height: 80rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.actionsheet_item:last-child {
    margin-top: 12rpx;
}