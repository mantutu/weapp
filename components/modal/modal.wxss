@import "../../app.wxss";

view,
text {
    box-sizing: border-box;
}

.modal_window {
    position: fixed;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    width: 100%;
    height: 100%;
    z-index: 99;
    animation-duration: 0.5s;
    animation-fill-mode: forwards;
}

.modal_mask {
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.45);
}

.modal {
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate3d(-50%, -50%, 0);
    min-width: 560rpx;
    max-width: 620rpx;
    border-radius: 24rpx;
    background: #fff;
    height: auto;
}

.modal_body {
    padding: 60rpx 30rpx 30rpx;
    text-align: center;
}

.modal_body>view:nth-child(2) {
    margin-top: 20rpx;
}

.modal_title {
    font-size: 34rpx;
    font-weight: 500;
    color: rgba(21, 30, 38, 1);
    line-height: 48rpx;
}

.modal_content {
    font-size: 30rpx;
    font-weight: 400;
    color: rgba(138, 142, 146, 1);
    line-height: 42rpx;
}

.modal_btn {
    border-top: 1rpx solid #e5e5e5;
    width: 100%;
}

.cancel_btn,
.confirm_btn {
    height: 100rpx;
    line-height: 100rpx;
    width: 100%;
    font-size: 32rpx;
    font-weight: 400;
    text-align: center;
}

.cancel_btn {
    border-right: 1rpx solid #e5e5e5;
}