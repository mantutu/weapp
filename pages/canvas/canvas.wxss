.btn {
    width: 450rpx;
    height: 80rpx;
    background: orange;
    line-height: 80rpx;
    font-size: 24rpx;
    color: #fff;
    text-align: center;
    border-radius: 8rpx;
    margin: 0 auto;
}

canvas {
    position: fixed;
    top: 0;
    left: 400px;
}


.preview {
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, .9);
    position: fixed;
    left: 0;
    top: 0;
    bottom: 0;
    right: 0;
    z-index: 2;
}

.preview image {
    width: 500rpx;
    position: absolute;
    left: 50%;
    top: 50rpx;
    margin-left: -250rpx;
    z-index: 3;
}

.preview .btn_wrap {
    width: 40%;
    position: absolute;
    bottom: 150rpx;
    left: 30%;
}